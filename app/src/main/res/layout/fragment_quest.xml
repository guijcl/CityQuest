<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:weightSum="6"
                android:visibility="visible"
                android:id="@+id/profile_quest_layout">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@drawable/quest_drawable"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:id="@+id/p_quest_name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:id="@+id/list_quest_layout"
                android:clickable="true"
                android:visibility="gone">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/quest_drawable"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:paddingStart="15dp"
                        android:text="QUEST NAME"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#CCCCCC"
                        android:id="@+id/quest_name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="-20dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:text="DESCRIPTION"
                        android:textSize="11sp"
                        android:textStyle="italic|bold"
                        android:textColor="#CCCCCC"
                        android:id="@+id/quest_desc"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/extra_card_loc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_weight="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MORE DETAILS"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_weight="3"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="Start Quest"
                    android:id="@+id/start_local_quest"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/extra_card_elaborate"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="> "
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:id="@+id/task_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="> "
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:id="@+id/task_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="> "
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:id="@+id/task_3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="> "
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:id="@+id/task_4"/>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="Start Quest"
                    android:id="@+id/start_elaborate_quest"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>